pipeline{
agent any
tools{
terraform 'terraform'
    }
stages{
stage('source code'){
 steps{
   git 'https://github.com/Kavanapc/finance_me.git'
   }
}
stage('create infra with terraform'){
 steps{
   sh 'sudo chmod 777 aws_key.pem'
   sh 'terraform init'
   sh 'terraform validate'
   sh 'terraform apply --auto-approve'
      }
  }
}
}
